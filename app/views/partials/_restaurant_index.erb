<div class='<% if view_owner?(restaurant) %>owner <% end %>restaurant-detail col-md-4 col-sm-6 col-sm-offset-0 col-xs-10 col-xs-offset-1 well text-center'>
  <h2><a class='show_restaurant' href="/restaurants/<%= restaurant.id %>"><%= restaurant.name %></a></h2>
  <h3 style='font-size: 1.2em;'><%= restaurant.city %></h3>
  <% if view_owner?(restaurant) %>
    <a class='edit_restaurant'href="/restaurants/<%= restaurant.id %>/edit">Edit</a>
    <form class='delete_restaurant_form' style='display: inline;' action="/restaurants/<%= restaurant.id %>" method="post">
      <input class='hidden' type="hidden" name="_method" value="delete">
      <input class='delete_restaurant' type="submit" value="Delete">
    </form>
  <% end %>
</div>
